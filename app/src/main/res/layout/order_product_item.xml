<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#E9EFC0"
    app:cardCornerRadius="12dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Haryt barada"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gornushi:"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/type"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"
                android:text="Gornushi"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Markasy:"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/marka"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artikuly:"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/articul"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modeli:"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/model"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garaşarna:"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/price_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"
                android:text="0 TMT"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nagt:"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/price_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"
                android:text="0 TMT"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arzanladyş:"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/discount"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"
                android:text="-10%"
                android:textSize="14sp"
                android:textColor="@color/red"
                />
        </LinearLayout>

      <LinearLayout
          android:layout_marginTop="12dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <com.google.android.material.button.MaterialButton
              android:id="@+id/undo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Yza gaýtar"
              android:textColor="@color/white"
              android:visibility="gone"
              />
          <com.google.android.material.button.MaterialButton
              android:id="@+id/cancel"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="Eltip berilmedi"
              android:textColor="@color/white"
              app:backgroundTint="@color/red"
              />
          <com.google.android.material.button.MaterialButton
              android:id="@+id/success"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="Eltip berildi"
              android:textColor="@color/white"
              app:backgroundTint="@color/green_2"
              android:layout_marginStart="12dp"
              />
      </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>