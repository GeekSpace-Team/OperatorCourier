<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fragment.Profile">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textAlignment="center"
           android:text="Hoş Geldiňiz"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_margin="16dp"
           />

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:src="@drawable/ic_baseline_person_pin_24"
           android:layout_marginTop="22dp"
           app:tint="@color/text" />

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="22dp"
           app:strokeWidth="0dp"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="16dp"
           android:layout_marginBottom="16dp"
           app:cardBackgroundColor="@color/light_blue"
           app:cardElevation="6dp"
           app:cardCornerRadius="30dp"
           >
           <LinearLayout
               android:padding="12dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Ady:"
                   android:textSize="16sp"
                   android:textColor="@color/text"
                   />
               <TextView
                   android:id="@+id/fullname"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Aman Amanow"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   android:textColor="@color/text"
                   android:layout_marginStart="12dp"
                   />
           </LinearLayout>
       </com.google.android.material.card.MaterialCardView>

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           app:strokeWidth="0dp"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="16dp"
           android:layout_marginBottom="16dp"
           app:cardBackgroundColor="@color/light_blue"
           app:cardElevation="6dp"
           app:cardCornerRadius="30dp"
           >
           <LinearLayout
               android:padding="12dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Telefon belgisi:"
                   android:textSize="16sp"
                   android:textColor="@color/text"
                   />
               <TextView
                   android:id="@+id/phone_number"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="+99362737222"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   android:textColor="@color/text"
                   android:layout_marginStart="12dp"
                   />
           </LinearLayout>
       </com.google.android.material.card.MaterialCardView>

       <TextView
           android:id="@+id/sync"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Maglumatlary serwera ugrat"
           android:drawableStart="@drawable/ic_baseline_sync_24"
           android:drawablePadding="16dp"
           android:gravity="center_vertical"
           android:drawableTint="@color/blue"
           android:textSize="16sp"
           android:textStyle="bold"
           android:textColor="@color/text"
           android:layout_marginStart="16dp"
           android:layout_marginTop="30dp"
           />

       <TextView
           android:id="@+id/logout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ulgamdan çykmak"
           android:drawableStart="@drawable/ic_baseline_exit_to_app_24"
           android:drawablePadding="16dp"
           android:gravity="center_vertical"
           android:drawableTint="@color/blue"
           android:textSize="16sp"
           android:textStyle="bold"
           android:textColor="@color/text"
           android:layout_marginStart="16dp"
           android:layout_marginTop="30dp"
           />
   </LinearLayout>



</ScrollView>